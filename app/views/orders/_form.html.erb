<%= form_with(model: order) do |form| %>
<% if order.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% order.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :date_submitted, class: label_class %>
          <%= form.datetime_field :date_submitted, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :customer_id, class: label_class %>
          <%= form.text_field :customer_id, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :status, class: label_class %>
          <%= form.number_field :status, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :subtotal, class: label_class %>
          <%= form.text_field :subtotal, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :shipping, class: label_class %>
          <%= form.text_field :shipping, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :tax, class: label_class %>
          <%= form.text_field :tax, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :total, class: label_class %>
          <%= form.text_field :total, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if order.persisted? %>
<%= link_to "Cancel", order, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", orders_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
